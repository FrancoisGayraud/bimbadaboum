			<Button text="Profil" class="profileButton" tap="editProfil"/>
    	<label text="{{ 'Bonjour ' + name }}" class="mainTitle"></label>
			<StackLayout class="matchZone">
				<label text="Lance ta recherche" class="searchTitle"></label>
