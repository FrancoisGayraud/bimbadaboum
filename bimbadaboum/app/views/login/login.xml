<Page loaded="loaded" actionBarHidden="true" class="body">

  <StackLayout orientation="vertical">

        <label text="BIMBADABOUM" class="mainTitle oldFashion"></label>

        <label text="Connexion" class="connexionText oldFashion"></label>

        <label text="Votre e-mail" class="hint arialRounded"></label>

    <TextField class="borderStyle arialRounded"  id="email" text="{{ email }}" hint="E-mail" keyboardType="email" autocorrect="false" autocapitalizationType="none"/>

        <label text="Votre mot de passe" class="hint arialRounded"></label>

    <TextField class="inputArea arialRounded" secure="true" text="{{ password }}" hint="Mot de passe" />

    <Button class="connexionButton arialRounded" text="CONNEXION" tap="signIn"/>
    <Button text="Pas encore inscrit ?" class="signUp arialRounded" tap="register"/>

  </StackLayout>
</Page>